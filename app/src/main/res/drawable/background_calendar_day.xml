<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="999dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="999dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/black"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="999dp"/>
            <solid android:color="@color/light_blue_600"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="999dp"/>
            <solid android:color="@color/light_blue_600"/>
            <stroke android:width="1dp" android:color="@color/greys_300"/>
        </shape>
    </item>

</selector>