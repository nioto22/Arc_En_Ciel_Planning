<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="125dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_widget_left_container"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:background="@drawable/event_widget_left_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/event_widget_team_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="Jouets"
            android:fontFamily="@font/sf_pro_text_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/event_widget_team_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/white_lozenge"
            android:src="@drawable/ic_alert_info"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-25dp"
        android:layout_marginStart="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/event_widget_avatar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/event_widget_left_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/event_widget_right_container"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/event_widget_chevron_button"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Ceci est un titre"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Ceci est un sous titre"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/event_widget_chevron_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_alert_chevron_white"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_widget_avatar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginStart="-6dp"
        app:layout_constraintStart_toEndOf="@+id/event_widget_left_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/event_widget_avatar_container">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/event_widget_progress_container"
            app:flexDirection="row"
            app:flexWrap="wrap"
            android:paddingHorizontal="16dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/background_try_avatar"
                android:src="@drawable/ic_avatar"
                android:padding="2dp"
                android:scaleType="centerCrop"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/background_try_avatar"
                android:layout_marginStart="-8dp"
                android:src="@drawable/ic_avatar"
                android:padding="2dp"
                android:scaleType="centerCrop"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/background_try_avatar"
                android:layout_marginStart="-8dp"
                android:src="@drawable/ic_avatar"
                android:padding="2dp"
                android:scaleType="centerCrop"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/background_try_avatar"
                android:layout_marginStart="-8dp"
                android:src="@drawable/ic_avatar"
                android:padding="2dp"
                android:scaleType="centerCrop"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/background_try_avatar"
                android:layout_marginStart="-8dp"
                android:src="@drawable/ic_avatar"
                android:padding="2dp"
                android:scaleType="fitXY"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/myOrange"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="..."
                />
        </com.google.android.flexbox.FlexboxLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/event_widget_progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_widget_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/greys_300"
                android:text="60%"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textSize="10sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <View
                android:id="@+id/event_widget_progress_background"
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/event_widget_progress_background"
                app:layout_constraintEnd_toStartOf="@+id/event_widget_progress_text"
                />
            <View
                android:id="@+id/event_widget_progress_progress"
                android:layout_width="36dp"
                android:layout_height="3dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/event_widget_progress_background"
                app:layout_constraintBottom_toBottomOf="@+id/event_widget_progress_background"
                android:background="@drawable/event_widget_progress_progress"
                app:layout_constraintStart_toStartOf="@+id/event_widget_progress_background"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_widget_avatar_container"
        android:background="@color/white"/>
    <View
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_widget_avatar_container"
        android:background="@drawable/event_widget_top_right_corner"/>

        

</androidx.constraintlayout.widget.ConstraintLayout>