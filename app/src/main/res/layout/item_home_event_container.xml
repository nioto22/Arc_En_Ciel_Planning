<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/home_event_date_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_event_card_view"
        app:layout_constraintEnd_toEndOf="@+id/home_event_card_view"
        android:gravity="start"
        android:fontFamily="@font/sf_pro_text_medium"
        android:textSize="20sp"
        android:textColor="@color/greys_700"
        tools:text="31 octobre 2022"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_event_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="@color/toy_blue"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/home_event_date_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="start"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textSize="20sp"
                android:textColor="@color/greys_700"
                tools:text="09:00"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/event_time"
                app:layout_constraintBottom_toBottomOf="@+id/event_time"
                app:layout_constraintStart_toEndOf="@id/event_time"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textSize="20sp"
                android:textColor="@color/greys_700"
                tools:text="Tri jouet"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/event_avatars_flexbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/event_time"
                app:flexWrap="wrap"
                app:flexDirection="row"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_home_avatar"
                    android:src="@drawable/ic_avatar"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_home_avatar"
                    android:src="@drawable/ic_avatar"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_home_avatar"
                    android:src="@drawable/ic_avatar"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/greys_700"
                    tools:text="ND"/>
            </com.google.android.flexbox.FlexboxLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/event_comments_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/event_avatars_flexbox"
                android:paddingVertical="6dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textSize="15sp"
                android:textColor="@color/greys_700"
                android:gravity="start|top"
                android:text="Aucun nouveau commentaire"
                android:ellipsize="end"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/event_check_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_event_card_view"
        app:layout_constraintTop_toBottomOf="@id/home_event_card_view"
        app:layout_constraintEnd_toEndOf="@id/home_event_card_view"
        app:layout_constraintStart_toEndOf="@id/home_event_card_view"
        android:src="@drawable/ic_check"
        android:elevation="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>