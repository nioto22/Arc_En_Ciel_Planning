<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/calendar_day_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="6dp"
    android:background="@drawable/background_calendar_day"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calendar_day_day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="31"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calendar_day_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:text="Oct."
        />
</androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/calendar_day_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/background_calendar_dot"
        android:layout_gravity="center"
        android:layout_marginVertical="4dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>