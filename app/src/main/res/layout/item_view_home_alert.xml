<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_alert_container_assiduity"
    android:layout_marginHorizontal="16dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_alert_title_white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alert_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_alert_icon"
                android:padding="4dp"
                android:src="@drawable/ic_alert_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/alert_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:gravity="start"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="Information générale"
                android:textColor="#FFDBCC"
                android:textSize="17sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            tools:text="Fermeture du magasin"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/greys_700"
            android:textSize="19sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_body_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:fontFamily="@font/sf_pro_text_regular"
            tools:text="Le magasin sera fermé les samedis 23 Octobre et 16 Novembre 2023 \n Le magasin sera fermé les samedis 23 Octobre et 16 Novembre 2023"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/alert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_white_button"
            android:padding="2dp"
            android:src="@drawable/ic_chevron_right"
            android:visibility="gone"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>