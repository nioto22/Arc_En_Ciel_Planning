<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <View
        android:id="@+id/date_margin_start"
        android:layout_width="32dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/calendar_date"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_date"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calendar_date_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:gravity="start"
        tools:text="12"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/greys_700"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_margin_start"
        android:visibility="gone"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calendar_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:gravity="start"
        tools:text="Novembre 2022"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/greys_700"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendar_date_day"
        app:layout_constraintEnd_toStartOf="@+id/calendar_select_date_button"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/calendar_select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/calendar_date"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_calendar_month"
        android:background="@android:color/transparent"
        />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/planning_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_date"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kizitonwose.calendar.view.WeekCalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:cv_dayViewResource="@layout/view_calendar_day"
                app:cv_orientation="horizontal"
                app:cv_daySize="seventhWidth"
                app:cv_weekHeaderResource="@layout/calendar_day_legend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendar_date" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/planning_no_item_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginHorizontal="64dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textSize="17sp"
                android:textColor="@color/greys_300"
                android:text="@string/planning_no_item_placeholder"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/planning_add_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:background="@drawable/background_validation_button"
                android:paddingHorizontal="32dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/greys_700"
                android:textSize="15sp"
                android:text="@string/new_event_button"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/planning_planning_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>