<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="32dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/frequency_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/greys_50"
        app:cardElevation="12dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Répéter cet événement : "
                />
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/frequency_flex_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"

                app:justifyContent="center"
                android:layout_marginVertical="14dp"
                android:layout_gravity="center"
                android:paddingVertical="4dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/frequency_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/black"
                    android:layout_marginVertical="4dp"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:text="Tous les "/>
                <Spinner
                    android:id="@+id/spinner_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:spinnerMode="dropdown"
                    android:paddingHorizontal="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/background_frequency_list"
                    android:drawableEnd="@drawable/ic_chevron_down"/>

                <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:spinnerMode="dropdown"
                    android:paddingHorizontal="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/background_frequency_list"
                    android:drawableEnd="@drawable/ic_chevron_down"/>
                <Spinner
                    android:id="@+id/spinner_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:spinnerMode="dropdown"
                    android:paddingHorizontal="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/background_frequency_list"
                    android:drawableEnd="@drawable/ic_chevron_down"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="4dp"
                    android:textSize="18sp"
                    android:text="fois"/>
            </com.google.android.flexbox.FlexboxLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="18dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/frequency_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Annuler"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="18sp"
                    android:paddingHorizontal="14dp"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/frequency_validate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Valider"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:textSize="18sp"
                    android:paddingHorizontal="14dp"
                    android:background="?android:attr/selectableItemBackground"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>